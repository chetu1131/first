<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div id="notification-container"></div>
  </body>
  <script>
    // Function to fetch notifications from the backend
    async function fetchNotifications() {
      try {
        const response = await fetch("/notifications");
        if (!response.ok) {
          throw new Error("Failed to fetch notifications");
        }
        const notifications = await response.json();

        displayNotifications(notifications);
      } catch (error) {
        console.error("Error fetching notifications:", error);
        // Handle error (e.g., display an error message to the user)
      }
    }

    // Function to display notifications on the UI
    function displayNotifications(notifications) {
      const notificationContainer = document.getElementById(
        "notification-container"
      );
      notificationContainer.innerHTML = ""; // Clear previous notifications

      notifications.forEach((notification) => {
        console.log(notification);
        let notificationHTML = "";

        // Generate HTML based on notification type
        switch (notification.type) {
          case "Follow":
            notificationHTML = `
          <div class="notification">
            <span>${notification.follower_username} followed ${notification.followed_username}</span>
          </div>
        `;
            break;
          case "Comment":
            notificationHTML = `
          <div class="notification">
            <span>${notification.username} commented on your post</span>
          </div>
        `;
            break;
          case "Like":
            notificationHTML = `
          <div class="notification">
            <span>${notification.username} liked your post</span>
          </div>
        `;
            break;
          // Handle other notification types similarly...
          default:
            console.warn(`Unknown notification type: ${notification.type}`);
        }

        // Append notification HTML to the container
        notificationContainer.innerHTML += notificationHTML;
      });
    }

    // Fetch notifications when the page loads
    window.addEventListener("load", fetchNotifications);
  </script>
</html>
